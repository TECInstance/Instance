<Controls:MetroWindow x:Class="Instance.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      Title="MainWindow" 
                      Height="350" 
                      Width="525"
                      GlowBrush="{DynamicResource AccentColorBrush}"
                      WindowStartupLocation="CenterScreen">
    <Controls:MetroWindow.RightWindowCommands>
        <Controls:WindowCommands>
            <Button x:Name="LoginBtn" Click="LoginBtn_Click">
                <TextBlock Text="Login"></TextBlock>
            </Button>
            <Button x:Name="SettingsBtn">
                <TextBlock Text="Settings"></TextBlock>
            </Button>
            
        </Controls:WindowCommands>
    </Controls:MetroWindow.RightWindowCommands>
    <Grid Background="#FF252525">
        <Button x:Name="ConnectBtn" Content="Connect" HorizontalAlignment="Left" Margin="356,34,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <TextBox x:Name="IpInput" HorizontalAlignment="Left" Height="23" Margin="231,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="IP Address" GotFocus="ChatInput_GotFocus"/>
        <TextBox x:Name="ChatInput" HorizontalAlignment="Left" Height="23" Margin="231,143,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="SendBtn" Content="Send" HorizontalAlignment="Left" Margin="356,144,0,0" VerticalAlignment="Top" Width="75" Click="SendBtn_Click"/>
        <Button x:Name="DisconnectBtn" Content="Disconnect" HorizontalAlignment="Left" Margin="436,34,0,0" VerticalAlignment="Top" Width="75" Click="DisconnectBtn_Click" IsEnabled="False"/>
        <CheckBox x:Name="DEBUGIPCHECK" Content="172.26.0.255" HorizontalAlignment="Left" Margin="231,10,0,0" VerticalAlignment="Top"/>
        <Button x:Name="button" Content="Send 1 MB" HorizontalAlignment="Left" Margin="326,174,0,0" VerticalAlignment="Top" Width="105" Click="button_Click_1"/>
    </Grid>

</Controls:MetroWindow>
